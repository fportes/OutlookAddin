<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <Id>8e43baba-96ed-44cf-a418-84168c890ace</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>SummitCare</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="SummitCare Auto Signature"/>
  <Description DefaultValue="Automatically inserts SummitCare signature."/>

  <Hosts>
    <Host xsi:type="MailHost"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.12"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteItem</Permissions>

  <Runtimes>
    <Runtime resid="WebViewRuntime.Url">
      <Override type="javascript" resid="JSRuntime.Url"/>
    </Runtime>
  </Runtimes>

  <ExtensionPoints>
    <ExtensionPoint xsi:type="Events">
      <Event Type="OnMessageCompose" FunctionName="onMessageComposeHandler"/>
    </ExtensionPoint>
  </ExtensionPoints>

  <Resources>
    <bt:Urls>
      <bt:Url id="WebViewRuntime.Url" DefaultValue="https://fportes.github.io/OutlookAddin/index.html"/>
      <bt:Url id="JSRuntime.Url" DefaultValue="https://fportes.github.io/OutlookAddin/signature.js"/>
    </bt:Urls>
  </Resources>

</OfficeApp>
